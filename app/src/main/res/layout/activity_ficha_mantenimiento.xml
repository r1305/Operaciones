<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    android:paddingStart="8dp"
    android:paddingEnd="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textSize="15sp"
                android:text="Descripción del equipo"
                android:fontFamily="@font/gotham_medium"
                android:textColor="@color/blanco"
                android:gravity="center"
                android:background="@color/verdePastel"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ficha_tv_nro_equipo"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Equipo N°"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/gotham_medium"
                    android:textColor="@color/negro"/>
                <ImageView
                    android:id="@+id/preview_adjunto"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_galery"/>
            </LinearLayout>

            <!-- Marca -->
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Marca:"
                    android:textSize="15sp"
                    android:gravity="center|start"
                    android:fontFamily="@font/gotham_medium"/>
                <TextView
                    android:id="@+id/ficha_marca"
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="- -"
                    android:gravity="center|start"
                    android:textSize="15sp"/>
            </LinearLayout>
            <!-- Tipo -->
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Tipo:"
                        android:textSize="15sp"
                        android:gravity="center|start"
                        android:fontFamily="@font/gotham_medium"/>
                    <TextView
                        android:id="@+id/ficha_tipo"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="- -"
                        android:gravity="center|start"
                        android:textSize="15sp"/>
                </LinearLayout>

            </LinearLayout>
            <!-- NRO SERIE -->
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Nro. Serie:"
                        android:gravity="center|start"
                        android:textSize="15sp"
                        android:fontFamily="@font/gotham_medium"/>
                    <TextView
                        android:id="@+id/ficha_nro_serie"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|start"
                        android:text="- -"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>
            <!-- BTU -->
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/gotham_medium"
                    android:gravity="center|start"
                    android:text="Btu/h:"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/ficha_btu"
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="- -"
                    android:gravity="center|start"
                    android:textSize="15sp"/>
            </LinearLayout>
            <!-- Modelo -->
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Modelo:"
                    android:gravity="center|start"
                    android:textSize="15sp"
                    android:fontFamily="@font/gotham_medium"/>
                <TextView
                    android:id="@+id/ficha_modelo"
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="- -"
                    android:gravity="center|start"
                    android:textSize="15sp"/>
            </LinearLayout>
            <!-- Voltaje -->
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Voltaje:"
                    android:gravity="center|start"
                    android:textSize="15sp"
                    android:fontFamily="@font/gotham_medium"/>
                <TextView
                    android:id="@+id/ficha_voltaje"
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="- -"
                    android:gravity="center|start"
                    android:textSize="15sp"/>
            </LinearLayout>
            <!-- Refrigerante -->
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Refrigerante:"
                    android:gravity="center|start"
                    android:textSize="15sp"
                    android:fontFamily="@font/gotham_medium"/>

                <TextView
                    android:id="@+id/ficha_refrigerante"
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="- -"
                    android:gravity="center|start"
                    android:textSize="15sp"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Lecturas -->
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="6dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Lecturas"
                android:gravity="center"
                android:fontFamily="@font/gotham_medium"
                android:textSize="15sp"
                android:background="@color/verdePastel"
                android:textColor="@color/blanco"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:layout_marginTop="6dp">
                <Button
                    android:id="@+id/btn_antes"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_ingresar"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Antes"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"/>
                <Button
                    android:id="@+id/btn_despues"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_ingresar"
                    android:text="Después"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"/>
            </LinearLayout>

        </LinearLayout>

        <!--Firmas-->
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Firmas"
                android:gravity="center"
                android:fontFamily="@font/gotham_medium"
                android:textSize="15sp"
                android:background="@color/verdePastel"
                android:textColor="@color/blanco"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:layout_marginTop="6dp">
                <Button
                    android:id="@+id/btn_firma_cliente"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_ingresar"
                    android:text="Cliente"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"/>

                <Button
                    android:id="@+id/btn_firma_tecnico"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_ingresar"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Técnico"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"/>
            </LinearLayout>

        </LinearLayout>
        <!--Solución-->
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <Button
                android:id="@+id/btn_cerrar"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/plomoBackground"
                android:text="Cancelar"/>
            <Button
                android:id="@+id/btn_registrar"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/verdePastel"
                android:text="Registrar"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
