<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp">

    <!-- Temperatura -->
    <LinearLayout
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@color/verdePastel"
                android:fontFamily="@font/gotham_medium"
                android:gravity="center"
                android:text="Temperatura (°C)"
                android:textColor="@color/blanco"
                android:textSize="15sp"
                android:layout_marginBottom="10dp"/>
            <!-- Lineas Temperaturas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <!-- L1 -->
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="T(Serpentin)"
                        android:gravity="center"
                        android:fontFamily="@font/gotham_medium"
                        android:textColor="@color/negro"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_temp_serpentin"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:text="0" />

                        <TextView
                            android:text="°C"
                            android:layout_width="27dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/gotham_medium"
                            android:visibility="gone"/>
                        <ImageView
                            android:id="@+id/icon_cam_temp_serpentin"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_cam2"
                            android:layout_gravity="center"/>

                        <ImageView
                            android:id="@+id/icon_gallery_temp_serpentin"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_galery"
                            android:visibility="gone"/>

                    </LinearLayout>

                </LinearLayout>
                <!-- L2 -->
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="T(Ambiente)"
                        android:gravity="center"
                        android:fontFamily="@font/gotham_medium"
                        android:textColor="@color/negro"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/et_temp_ambiente"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="0"
                            android:inputType="numberDecimal"
                            android:gravity="center"/>
                        <TextView
                            android:text="°C"
                            android:layout_width="27dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/gotham_medium"
                            android:visibility="gone"/>

                        <ImageView
                            android:id="@+id/icon_cam_temp_ambiente"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_cam2" />

                        <ImageView
                            android:id="@+id/icon_gallery_temp_ambiente"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_galery"
                            android:visibility="gone"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Presión -->
    <LinearLayout
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@color/verdePastel"
                android:fontFamily="@font/gotham_medium"
                android:gravity="center"
                android:text="Presión (PSI)"
                android:textColor="@color/blanco"
                android:textSize="15sp"
                android:layout_marginBottom="10dp"/>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <!-- Baja -->
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Baja"
                        android:fontFamily="@font/gotham_medium"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/negro"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_presion_baja"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="0"
                            android:inputType="numberSigned"
                            android:gravity="center"
                            android:textSize="15sp"/>

                        <TextView
                            android:text="PSI"
                            android:layout_width="27dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/gotham_medium"
                            android:visibility="gone"/>


                        <ImageView
                            android:id="@+id/icon_cam_presion_baja"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_cam2" />

                        <ImageView
                            android:id="@+id/icon_gallery_presion_baja"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_galery"
                            android:visibility="gone"/>
                    </LinearLayout>

                </LinearLayout>
                <!-- Alta -->
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Alta"
                        android:fontFamily="@font/gotham_medium"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/negro"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_presion_alta"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="0"
                            android:inputType="numberSigned"
                            android:gravity="center"
                            android:textSize="15sp"/>

                        <TextView
                            android:text="PSI"
                            android:layout_width="27dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/gotham_medium"
                            android:visibility="gone"/>

                        <ImageView
                            android:id="@+id/icon_cam_presion_alta"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_cam2" />

                        <ImageView
                            android:id="@+id/icon_gallery_presion_alta"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_galery"
                            android:visibility="gone"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Eléctrica -->
    <LinearLayout
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <!-- Amperaje -->
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp">

            <TextView
                android:text="Amperaje (A)"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@color/verdePastel"
                android:fontFamily="@font/gotham_medium"
                android:gravity="center"
                android:textColor="@color/blanco"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <!-- Lineas Amperaje -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <!-- L1 -->
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:text="L1"
                                    android:gravity="center"
                                    android:fontFamily="@font/gotham_medium"
                                    android:textColor="@color/negro"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">
                                    <EditText
                                        android:id="@+id/et_amperaje"
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:text="0"
                                        android:inputType="numberDecimal"
                                        android:gravity="center"/>

                                    <ImageView
                                        android:id="@+id/icon_cam_amperaje"
                                        android:layout_width="30dp"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:src="@drawable/icon_cam2"/>

                                    <ImageView
                                        android:id="@+id/icon_gallery_amperaje"
                                        android:layout_width="30dp"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:src="@drawable/icon_galery"
                                        android:visibility="gone"/>

                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <!-- Voltaje -->
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:text="Voltaje (V)"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@color/verdePastel"
                android:fontFamily="@font/gotham_medium"
                android:gravity="center"
                android:textColor="@color/blanco"
                android:textSize="15sp"/>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal">
                <!-- Lineas Amperaje -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <!-- L1 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:fontFamily="@font/gotham_medium"
                            android:gravity="center"
                            android:text="L1"
                            android:textColor="@color/negro" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/et_voltaje"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="0"
                                android:inputType="numberSigned"
                                android:gravity="center"/>

                            <TextView
                                android:layout_width="27dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:fontFamily="@font/gotham_medium"
                                android:gravity="center"
                                android:text="V"
                                android:textSize="16sp"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/icon_cam_voltaje"
                                android:layout_width="30dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="top"
                                android:src="@drawable/icon_cam2" />

                            <ImageView
                                android:id="@+id/icon_gallery_voltaje"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/icon_galery"
                                android:visibility="gone" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/dialog_lectura_btn_cancelar"
            android:text="Cancelar"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/plomoBackground"/>

        <Button
            android:id="@+id/dialog_lectura_btn_guardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/verdePastel"
            android:text="Guardar"
            android:textColor="@color/negro" />
    </LinearLayout>

</LinearLayout>