<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:padding="10dp"
    android:layout_gravity="center"
    android:background="@drawable/border_dialog"
    android:gravity="center">

    <TextView
        android:text="Registrar atenciÃ³n"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dialog_icon_calendar"
                android:layout_weight="1.8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/icon_calendar"
                android:tint="@color/negro"/>
            <EditText
                android:layout_weight="0.5"
                android:id="@+id/dialog_urgencia_fecha"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:outlineAmbientShadowColor="@color/negro"
                android:textColor="@color/negro"
                android:editable="false"
                android:focusable="true"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:textAlignment="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/dialog_icon_clock"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/icon_clock"
                android:tint="@color/negro"/>
            <EditText
                android:id="@+id/dialog_urgencia_hora"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:outlineAmbientShadowColor="@color/negro"
                android:textColor="@color/negro"
                android:textSize="15sp"
                android:editable="false"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:textAlignment="center"/>

        </LinearLayout>
    </LinearLayout>

    <jrizani.jrspinner.JRSpinner
        android:id="@+id/spinner_contratista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/negro"
        android:textColorLink="@color/negro"
        android:textColorHighlight="@color/negro"
        app:jrs_icon_tint="@color/negro"
        android:hint="Contratista"
        app:jrs_title="Seleccione Contratista"
        app:jrs_multiple="false"
        android:textColorHint="@color/negro"
        android:textSize="15sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/dialog_btn_cancelar"
            android:text="Cancelar"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/plomoBackground"/>

        <Button
            android:id="@+id/dialog_btn_agendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/verdePastel"
            android:text="Agendar"
            android:textColor="@color/negro" />
    </LinearLayout>
</LinearLayout>