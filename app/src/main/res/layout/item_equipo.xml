<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_card_cliente"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_gravity="center"
    android:layout_marginStart="2.5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="9dp"
    android:elevation="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginEnd="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginStart="10dp">
            <TextView
                android:id="@+id/tv_nro_equipo"
                android:text="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/gotham_medium"
                android:textColor="@color/negro"
                android:background="@color/naranja"/>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <!-- Tipo -->
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_weight="0.85"
                                android:text="@string/equipo_string_tipo"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@color/negro"
                                android:gravity="center|start"
                                android:fontFamily="@font/gotham_regular"/>
                            <TextView
                                android:id="@+id/equipo_tipo"
                                android:layout_weight="0.45"
                                android:text="Piso Techo"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@color/negro"
                                android:fontFamily="@font/gotham_regular"
                                android:gravity="start|center"/>
                        </LinearLayout>
                        <!-- Modelo -->
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_weight="0.85"
                                android:text="@string/equipo_string_modelo"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@color/negro"
                                android:fontFamily="@font/gotham_regular"
                                android:gravity="center|start"/>
                            <TextView
                                android:id="@+id/equipo_modelo"
                                android:layout_weight="0.45"
                                android:text="GMV-N28G/A3A-D"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@color/negro"
                                android:fontFamily="@font/gotham_regular"
                                android:gravity="start|center"/>
                        </LinearLayout>
                        <!-- Serie -->
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_weight="0.85"
                                android:text="@string/equipo_string_serie"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@color/negro"
                                android:fontFamily="@font/gotham_regular"
                                android:gravity="center|start"/>

                            <TextView
                                android:id="@+id/equipo_nro_serie"
                                android:layout_weight="0.45"
                                android:text="00247-775"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@color/negro"
                                android:fontFamily="@font/gotham_regular"
                                android:gravity="start|center"/>
                        </LinearLayout>
                        <!-- Serie -->
                        <LinearLayout
                            android:id="@+id/linear_voltaje"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_weight="0.85"
                                android:text="@string/equipo_string_voltaje"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@color/negro"
                                android:fontFamily="@font/gotham_regular"
                                android:gravity="center|start"/>

                            <TextView
                                android:id="@+id/equipo_voltaje"
                                android:layout_weight="0.45"
                                android:text="220/1F"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@color/negro"
                                android:fontFamily="@font/gotham_regular"
                                android:gravity="start|center"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/equipo_logo"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_gravity="start|center"
                android:paddingEnd="3dp"
                android:paddingStart="3dp"
                android:rotation="-90"/>
            <ImageView
                android:id="@+id/edit_equipo"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_edit"
                android:layout_gravity="center"
                android:tint="@color/verdePastel"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>