<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PrincipalFragment"
    android:orientation="vertical"
    android:theme="@style/NoBar">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_instalaciones"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fondo_instalaciones"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:text="Instalaciones"
                android:background="@null"
                android:textColor="@color/blanco"
                android:textSize="32sp"
                android:fontFamily="@font/gotham_medium"/>
            <Button
                android:id="@+id/btn_instalaciones"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_background_transparent"
                android:text="Ingresar"
                android:textColor="@color/blanco"
                android:layout_marginTop="15dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_mantenimiento"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fondo_mantenimiento"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:text="Mantenimiento"
                android:background="@null"
                android:textColor="@color/blanco"
                android:textSize="32sp"
                android:fontFamily="@font/gotham_medium"/>
            <Button
                android:id="@+id/btn_mantenimientos"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_background_transparent"
                android:text="Ingresar"
                android:textColor="@color/blanco"
                android:layout_marginTop="15dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_urgencias"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fondo_urgencias"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:text="Urgencias"
                android:background="@null"
                android:textColor="@color/blanco"
                android:textSize="32sp"
                android:fontFamily="@font/gotham_medium"/>
            <Button
                android:id="@+id/btn_urgencias"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_background_transparent"
                android:text="Ingresar"
                android:textColor="@color/blanco"
                android:layout_marginTop="15dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>